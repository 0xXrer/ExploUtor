{
  "name": "exploitor",
  "displayName": "ExploUtor",
  "description": "Roblox exploit development environment with Luau LSP and WebSocket executor integration",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xXrer/ExploUtor.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:luau"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "luau",
        "aliases": [
          "Luau",
          "luau"
        ],
        "extensions": [
          ".luau",
          ".lua"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luau",
        "scopeName": "source.luau",
        "path": "./syntaxes/luau.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "luau",
        "path": "./snippets/luau.json"
      }
    ],
    "commands": [
      {
        "command": "exploitor.execute",
        "title": "Execute Script",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.executeSelection",
        "title": "Execute Selection",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.bundleExecute",
        "title": "Bundle and Execute",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.connectExecutor",
        "title": "Connect to Executor",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.disconnectExecutor",
        "title": "Disconnect from Executor",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.refreshExplorer",
        "title": "Refresh Explorer",
        "category": "ExploUtor",
        "icon": "$(refresh)"
      },
      {
        "command": "exploitor.clearHistory",
        "title": "Clear Execution History",
        "category": "ExploUtor",
        "icon": "$(clear-all)"
      },
      {
        "command": "exploitor.quickExecute",
        "title": "Quick Execute",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.obfuscateScript",
        "title": "Obfuscate Script",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.packScripts",
        "title": "Pack Scripts",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.switchExecutor",
        "title": "Switch Executor",
        "category": "ExploUtor"
      },
      {
        "command": "exploitor.inspectVariables",
        "title": "Inspect Variables",
        "category": "ExploUtor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "exploUtor",
          "title": "ExploUtor",
          "icon": "$(debug-alt)"
        }
      ]
    },
    "views": {
      "exploUtor": [
        {
          "id": "exploUtorExplorer",
          "name": "Explorer",
          "icon": "$(debug-alt)",
          "contextualTitle": "ExploUtor Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "exploitor.refreshExplorer",
          "when": "view == exploUtorExplorer",
          "group": "navigation"
        },
        {
          "command": "exploitor.clearHistory",
          "when": "view == exploUtorExplorer",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "exploitor.quickExecute",
          "when": "editorLangId == luau",
          "group": "exploitor@1"
        },
        {
          "command": "exploitor.executeSelection",
          "when": "editorLangId == luau && editorHasSelection",
          "group": "exploitor@2"
        },
        {
          "command": "exploitor.bundleExecute",
          "when": "editorLangId == luau",
          "group": "exploitor@3"
        },
        {
          "command": "exploitor.obfuscateScript",
          "when": "editorLangId == luau",
          "group": "exploitor@4"
        },
        {
          "command": "exploitor.packScripts",
          "when": "editorLangId == luau",
          "group": "exploitor@5"
        },
        {
          "command": "exploitor.inspectVariables",
          "when": "editorLangId == luau",
          "group": "exploitor@6"
        }
      ]
    },
    "keybindings": [
      {
        "command": "exploitor.execute",
        "key": "f5",
        "when": "editorLangId == luau"
      },
      {
        "command": "exploitor.executeSelection",
        "key": "shift+f5",
        "when": "editorLangId == luau && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "ExploUtor",
      "properties": {
        "exploitor.executor.host": {
          "type": "string",
          "default": "localhost",
          "description": "Executor WebSocket host"
        },
        "exploitor.executor.port": {
          "type": "number",
          "default": 9999,
          "description": "Executor WebSocket port"
        },
        "exploitor.bundler.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic bundling before execution"
        },
        "exploitor.bundler.tool": {
          "type": "string",
          "enum": [
            "wax",
            "darklua"
          ],
          "default": "darklua",
          "description": "Bundler tool to use"
        },
        "exploitor.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Luau LSP integration"
        },
        "exploitor.liveReload.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Auto-execute script on file save"
        },
        "exploitor.liveReload.debounce": {
          "type": "number",
          "default": 500,
          "description": "Debounce time in milliseconds for live reload"
        },
        "exploitor.errorBeautifier.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Format executor errors nicely"
        },
        "exploitor.executors": {
          "type": "array",
          "default": [
            {
              "name": "Default",
              "host": "localhost",
              "port": 9999
            }
          ],
          "description": "List of executor configurations",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "host": {
                "type": "string"
              },
              "port": {
                "type": "number"
              }
            }
          }
        },
        "exploitor.activeExecutor": {
          "type": "string",
          "default": "Default",
          "description": "Currently active executor profile"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "ws": "^8.16.0"
  }
}
